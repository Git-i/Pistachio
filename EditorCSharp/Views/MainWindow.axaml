<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EditorCSharp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:EditorCSharp.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EditorCSharp.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
		x:DataType="vm:MainViewModel"
        Title="EditorCSharp">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Open..." Icon="/Assets/avalonia-ico.ico">
				</MenuItem>
				<Separator/>
				<MenuItem Header="_Exit"/>
			</MenuItem>
			<MenuItem Header="_Edit">
				<MenuItem Header="Copy"/>
				<MenuItem Header="Paste"/>
			</MenuItem>
		</Menu>
		<Button DockPanel.Dock="Left" VerticalAlignment="Stretch" Width="200"></Button>
		<Button DockPanel.Dock="Right" VerticalAlignment="Stretch" Width="200"></Button>
		<Button DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" Height="150"></Button>
		<views:MainView DataContext="{Binding}"/>
	</DockPanel>
</Window>
